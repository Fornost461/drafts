set nocompatible    	" enable Vim-specific features

set incsearch       	" start searching while typing
set number              " display line numbers
set ruler           	" information about cursor location
syntax on

" tab settings
set autoindent
set expandtab       	" pressing <TAB> only produces spaces
set shiftwidth=4        " shift by 4 spaces when pressing > or < in visual mode
set softtabstop=4   	" 4 spaces by tabulation
set tabstop=4       	" hard tabs are 4-space long

