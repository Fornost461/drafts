#!/bin/sh

# watcher - launch video files with some player

## parameters

print_help_at_launch=true
file_browser='spacefm'
video_player='vlc'

tmsu_data=~/'mnt/Data/Downloads/Transmission/v'
tmsu_mountpoint=~/'mnt/tmsu'

dir_root=~/'mnt/Data/Downloads/Transmission/v'
dir_videos_to_play="${dir_root}/all/unwatched"

## code

PROGNAME="watcher"
PROGDIR="$(cd "$(dirname "${0}")" && pwd -P)"

# load libraries
. "${PROGDIR}/_utils/load" || { echo "${PROGNAME}: line ${LINENO}: error code ${?} while sourcing “ ${PROGDIR}/_utils/load ”" >&2 ; exit 1; }

# debug mode
no_video=false
[ "${#}" -gt 0 ] && no_video=true

_dir_contains_videos()
{
    ~/bin/dir_not_empty "${dir_videos_to_play}"
}

_load_list()
{
    if "${move_videos}"
    then
        list="$(find "${dir_videos_to_play}")"
    else
        list="$(find "${dir_videos_to_play}" -mindepth 1 -type f)"
    fi
    list_size="$(wc -l <<-EOF
		${list}
		EOF
	)"
}

_question()
{
    printf '“ %s ”\n' "${video_file}"
    printf 'Action ? '
    if "${move_videos}"; then
        if "${moved}"; then
            printf '[n]/y/'
        else
            printf '[y]/n/'
        fi
    else
        printf '[n]/'
    fi
    printf '%s\n' 'q/r/d/p/s/v/t/u/h'
}

_play_vid()
{
    if ! "${no_video}"; then
        "${video_player}" "${video_file}" 1>/dev/null 2>&1 & disown
    fi
}

_move_video()
{
    if mkdir -vp "${dir_moved_videos}"; then
        if mv -vi "${video_file}" "${dir_moved_videos}"; then
            moved=true
            new_path="${dir_moved_videos}/$(basename "${video_file}")"

            # transfer tags
            if ! tmsu repair --manual "${video_file}" "${new_path}"
            then
                printf "${PROGNAME}: tmsu gave error ${?} after trying to transfer tags from “${video_file}” to “${new_path}”.\n" >&2
            fi

            video_file="${new_path}"
            dir="$(dirname "${video_file}")"

            if "${save_count}"
            then
                echo "${folder_number}" > "${dir_root}/last"
                save_count=false
            fi
        else
            printf "${PROGNAME}: mv gave error ${?} after trying to move “${video_file}” to “${dir_moved_videos}”.\n" >&2
        fi
    else
        echo "${PROGNAME}: an error occurred when attempting to create directory ${dir_moved_videos}" >&2
    fi
}

mkdir -p "${tmsu_mountpoint}"
cd "${tmsu_data}"
tmsu mount "${tmsu_mountpoint}"

if _dir_contains_videos; then
    move_videos=true

    folder_number="$(cat "${dir_root}/last")"
    printf '%s ' 'Update count? [y]/n'
    read ans
    case "${ans}" in
        (n|N)
            save_count=false
            ;;
        (*)
            let 'folder_number++'
            save_count=true
            ;;
    esac

    dir_moved_videos="${dir_root}/all/${folder_number}"
else
    dir_videos_to_play="${dir_root}/all"
    move_videos=false
fi

"${print_help_at_launch}" && _usage

keep_looping=true
_load_list
while "${keep_looping}"
do
    if [ "${list_size}" -lt 1 ]
    then
        keep_looping=false
        break
    fi
    # pick video
    i="$(~/bin/new_rand 1 "${list_size}")"
    video_file="$(~/bin/line "${i}" <<-EOF
		${list}
		EOF
	)"
    if ! [ -e "${video_file}" ]
    then
        _load_list
        continue
    fi
    # remove video from list
    list="$(sed "${i}d" <<-EOF
		${list}
		EOF
	)"
    dir="$(dirname "${video_file}")"
    moved=false
    _play_vid
    reask=true
    while "${reask}"
    do
        _question
        read ans
        case "${ans}" in
            (p|P)    # file browser
                "${file_browser}" "${dir}" 1>/dev/null 2>&1 & disown
                ;;
            (r|R)    # replay
                _play_vid
                ;;
            (d|D)    # delete video file
                if rm -v "${video_file}"
                then
                    moved=true
                    tmsu untag --all "${video_file}"
                fi
                ;;
            (n|N)    # skip next actions
                reask=false
                ;;
            (q|Q)    # exit
                echo 'Quitting.'
                keep_looping=false
                break
                ;;
            (y|Y)   # move video file
                "${move_videos}" && _move_video
                ;;
            ('')
                if "${move_videos}" && ! "${moved}"; then
                    _move_video
                else
                    reask=false
                fi
                ;;
            (s|S)    # show tags
                printf '\nall tags: '
                tmsu tags
                printf '\ntags of current video: '
                tmsu tags "${video_file}"
                printf '\ntag implications:\n'
                tmsu imply
                ;;
            (v|V)    # show values
                printf 'values for which tag? '
                read ans
                tmsu values "${ans}"
                ;;
            (t|T)    # tag
                printf "tag this video: "
                read ans
                tmsu tag --tags "${ans}" "${video_file}"
                ;;
            (u|U)    # untag
                printf "tags to remove from this video: "
                read ans
                tmsu untag --tags "${ans}" "${video_file}"
                ;;
            (h|H)    # print help
                _usage
                ;;
            (*)
                printf '%s\n' 'Invalid command.'
                _usage
                ;;
        esac
    done
done
